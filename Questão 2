def soma_imposto (taxa_imposto, custo):
    custo = (taxa_imposto/100+1) * custo
    return custo
arg1 = float(input("Informe a porcentagem de imposto sobre o produto: "))
arg2 = float(input("Informe o custo do produto: "))
print(f'O preço do produto com imposto é de R$: {soma_imposto(arg1,arg2):.2f}')
